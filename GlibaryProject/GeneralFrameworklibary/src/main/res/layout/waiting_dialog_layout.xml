<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/x70"
        android:layout_height="@dimen/x70"
        android:background="@drawable/waiting_dialong_bg"
        android:orientation="vertical">

        <xufeng.android.generalframework.dialog.progressindicator.AVLoadingIndicatorView
            android:id="@+id/lodingView"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/textLoding"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_below="@+id/lodingView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-2dp"
            android:gravity="center"
            android:text="加载中..."
            android:textColor="@color/white"
            android:textSize="@dimen/x11" />
    </RelativeLayout>

</LinearLayout>